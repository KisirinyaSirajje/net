@model IEnumerable<SchoolManagementSystem.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-users"></i> Students</h2>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Add New Student
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Search and Filter Section -->
            <div class="card mb-4">
                <div class="card-body">
                    <form asp-action="Index" method="get" class="row g-3">
                        <div class="col-md-8">
                            <div class="input-group">
                                <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" 
                                       class="form-control" placeholder="Search by name, student ID, or email...">
                                <button class="btn btn-outline-primary" type="submit">
                                    <i class="fas fa-search"></i> Search
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="Index" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-undo"></i> Clear Filter
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Students Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-list"></i> Student List 
                        <span class="badge bg-primary ms-2">@Model.Count() students</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>
                                            <a asp-action="Index" asp-route-sortOrder="@ViewData["IdSortParm"]" 
                                               asp-route-searchString="@ViewData["CurrentFilter"]"
                                               class="text-decoration-none text-dark">
                                                Student ID
                                                @if (ViewData["IdSortParm"]?.ToString() == "Id")
                                                {
                                                    <i class="fas fa-sort-up"></i>
                                                }
                                                else if (ViewData["IdSortParm"]?.ToString() == "id_desc")
                                                {
                                                    <i class="fas fa-sort-down"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-sort"></i>
                                                }
                                            </a>
                                        </th>
                                        <th>
                                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" 
                                               asp-route-searchString="@ViewData["CurrentFilter"]"
                                               class="text-decoration-none text-dark">
                                                Full Name
                                                @if (string.IsNullOrEmpty(ViewData["NameSortParm"]?.ToString()))
                                                {
                                                    <i class="fas fa-sort-up"></i>
                                                }
                                                else if (ViewData["NameSortParm"]?.ToString() == "name_desc")
                                                {
                                                    <i class="fas fa-sort-down"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-sort"></i>
                                                }
                                            </a>
                                        </th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>
                                            <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" 
                                               asp-route-searchString="@ViewData["CurrentFilter"]"
                                               class="text-decoration-none text-dark">
                                                Enrollment Date
                                                @if (ViewData["DateSortParm"]?.ToString() == "Date")
                                                {
                                                    <i class="fas fa-sort-up"></i>
                                                }
                                                else if (ViewData["DateSortParm"]?.ToString() == "date_desc")
                                                {
                                                    <i class="fas fa-sort-down"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-sort"></i>
                                                }
                                            </a>
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-info">@Html.DisplayFor(modelItem => item.StudentId)</span>
                                            </td>
                                            <td>
                                                <strong>@Html.DisplayFor(modelItem => item.FullName)</strong>
                                            </td>
                                            <td>
                                                <i class="fas fa-envelope text-muted me-1"></i>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.PhoneNumber))
                                                {
                                                    <i class="fas fa-phone text-muted me-1"></i>
                                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">@item.EnrollmentDate.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                                       class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Enroll" asp-route-id="@item.Id" 
                                                       class="btn btn-outline-success" title="Enroll in Course">
                                                        <i class="fas fa-book-open"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                                       class="btn btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" 
                                                       class="btn btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5>No students found</h5>
                            <p class="text-muted">
                                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                                {
                                    <span>No students match your search criteria.</span>
                                }
                                else
                                {
                                    <span>Start by adding your first student to the system.</span>
                                }
                            </p>
                            @if (string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                            {
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Add First Student
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>