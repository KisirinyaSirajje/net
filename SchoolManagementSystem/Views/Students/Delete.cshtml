@model SchoolManagementSystem.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0 text-danger">
                    <i class="fas fa-user-times me-2"></i>
                    Delete Student
                </h2>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <!-- Warning Alert -->
                    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading">Warning: Permanent Action</h5>
                            <p class="mb-0">
                                You are about to permanently delete this student and all associated data. 
                                This action cannot be undone.
                            </p>
                        </div>
                    </div>

                    <div class="card shadow border-danger">
                        <div class="card-header bg-danger text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-user-graduate me-2"></i>
                                Student Information to be Deleted
                            </h5>
                        </div>
                        <div class="card-body">
                            <!-- Student Details -->
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Student ID</label>
                                        <div class="fw-bold fs-5">
                                            <span class="badge bg-primary fs-6">@Html.DisplayFor(model => model.StudentId)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Full Name</label>
                                        <div class="fw-bold fs-5">@Html.DisplayFor(model => model.FullName)</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">
                                            <i class="fas fa-envelope me-1"></i>Email
                                        </label>
                                        <div>@Html.DisplayFor(model => model.Email)</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">
                                            <i class="fas fa-calendar-plus me-1"></i>Enrollment Date
                                        </label>
                                        <div>@Model.EnrollmentDate.ToString("MMMM dd, yyyy")</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Impact Analysis -->
                            <div class="card mb-4 border-warning">
                                <div class="card-header bg-warning text-dark">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-impact me-2"></i>Deletion Impact Analysis
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-md-3">
                                            <div class="border-end">
                                                <div class="h4 mb-1 text-primary">
                                                    @if (Model.CourseEnrollments?.Any() == true)
                                                    {
                                                        @Model.CourseEnrollments.Count()
                                                    }
                                                    else
                                                    {
                                                        <span>0</span>
                                                    }
                                                </div>
                                                <small class="text-muted">Course Enrollments</small>
                                                <div class="small text-danger mt-1">
                                                    @if (Model.CourseEnrollments?.Any() == true)
                                                    {
                                                        <text><i class="fas fa-exclamation-circle"></i> Will be removed</text>
                                                    }
                                                    else
                                                    {
                                                        <text><i class="fas fa-check-circle text-success"></i> No impact</text>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="border-end">
                                                <div class="h4 mb-1 text-success">
                                                    @if (Model.Grades?.Any() == true)
                                                    {
                                                        @Model.Grades.Count()
                                                    }
                                                    else
                                                    {
                                                        <span>0</span>
                                                    }
                                                </div>
                                                <small class="text-muted">Grade Records</small>
                                                <div class="small text-danger mt-1">
                                                    @if (Model.Grades?.Any() == true)
                                                    {
                                                        <text><i class="fas fa-exclamation-circle"></i> Will be deleted</text>
                                                    }
                                                    else
                                                    {
                                                        <text><i class="fas fa-check-circle text-success"></i> No impact</text>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="border-end">
                                                <div class="h4 mb-1 text-info">
                                                    @if (Model.Attendances?.Any() == true)
                                                    {
                                                        @Model.Attendances.Count()
                                                    }
                                                    else
                                                    {
                                                        <span>0</span>
                                                    }
                                                </div>
                                                <small class="text-muted">Attendance Records</small>
                                                <div class="small text-danger mt-1">
                                                    @if (Model.Attendances?.Any() == true)
                                                    {
                                                        <text><i class="fas fa-exclamation-circle"></i> Will be deleted</text>
                                                    }
                                                    else
                                                    {
                                                        <text><i class="fas fa-check-circle text-success"></i> No impact</text>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="h4 mb-1 text-warning">
                                                @if (Model.GPA.HasValue)
                                                {
                                                    @Model.GPA.Value.ToString("F2")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </div>
                                            <small class="text-muted">Current GPA</small>
                                            <div class="small text-danger mt-1">
                                                @if (Model.GPA.HasValue)
                                                {
                                                    <text><i class="fas fa-exclamation-circle"></i> Will be lost</text>
                                                }
                                                else
                                                {
                                                    <text><i class="fas fa-check-circle text-success"></i> No impact</text>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Enrolled Courses (if any) -->
                            @if (Model.CourseEnrollments?.Any() == true)
                            {
                                <div class="card mb-4">
                                    <div class="card-header bg-light">
                                        <h6 class="card-title mb-0">
                                            <i class="fas fa-books me-2"></i>
                                            Enrolled Courses (Will be removed)
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            @foreach (var enrollment in Model.CourseEnrollments)
                                            {
                                                <div class="col-md-6 mb-2">
                                                    <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                                        <div>
                                                            <strong>@enrollment.Course?.CourseName</strong>
                                                            <br>
                                                            <small class="text-muted">@enrollment.Course?.CourseCode</small>
                                                        </div>
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-times"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Confirmation Form -->
                            <form asp-action="Delete" method="post" id="deleteForm">
                                <input type="hidden" asp-for="Id" />
                                
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                                            <label class="form-check-label fw-bold" for="confirmDelete">
                                                I understand that this action is permanent and cannot be undone
                                            </label>
                                        </div>
                                        
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" id="confirmImpact" required>
                                            <label class="form-check-label fw-bold" for="confirmImpact">
                                                I acknowledge that all associated data (grades, attendance, enrollments) will be permanently deleted
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between mt-4">
                                    <div>
                                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info me-2">
                                            <i class="fas fa-eye me-1"></i>View Details
                                        </a>
                                        <a asp-action="Index" class="btn btn-outline-secondary">
                                            <i class="fas fa-arrow-left me-1"></i>Cancel
                                        </a>
                                    </div>
                                    <button type="submit" class="btn btn-danger" id="deleteButton" disabled>
                                        <i class="fas fa-trash me-1"></i>Delete Student Permanently
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const confirmDelete = document.getElementById('confirmDelete');
            const confirmImpact = document.getElementById('confirmImpact');
            const deleteButton = document.getElementById('deleteButton');
            const deleteForm = document.getElementById('deleteForm');

            function updateDeleteButton() {
                if (confirmDelete.checked && confirmImpact.checked) {
                    deleteButton.disabled = false;
                    deleteButton.classList.remove('btn-outline-danger');
                    deleteButton.classList.add('btn-danger');
                } else {
                    deleteButton.disabled = true;
                    deleteButton.classList.remove('btn-danger');
                    deleteButton.classList.add('btn-outline-danger');
                }
            }

            confirmDelete.addEventListener('change', updateDeleteButton);
            confirmImpact.addEventListener('change', updateDeleteButton);

            // Final confirmation before submit
            deleteForm.addEventListener('submit', function(e) {
                if (!confirm('This is your final confirmation. Are you absolutely sure you want to delete this student and all associated data? This action cannot be undone.')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}

<style>
    .border-end {
        border-right: 1px solid #dee2e6 !important;
    }
    
    .card {
        border-radius: 10px;
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    
    @@media (max-width: 768px) {
        .border-end {
            border-right: none !important;
            border-bottom: 1px solid #dee2e6 !important;
            padding-bottom: 1rem;
            margin-bottom: 1rem;
        }
    }
</style>