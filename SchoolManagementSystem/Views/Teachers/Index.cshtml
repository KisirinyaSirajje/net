@model IEnumerable<SchoolManagementSystem.Models.Teacher>

@{
    ViewData["Title"] = "Teachers Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="fas fa-chalkboard-teacher text-primary me-2"></i>Teachers Management</h2>
                    <p class="text-muted mb-0">Manage teaching staff and faculty members</p>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Teacher
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search and Filter Section -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                               class="form-control border-start-0" 
                               placeholder="Search by name, employee ID, email, or department...">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="fas fa-filter me-1"></i>Search
                    </button>
                </div>
                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-times me-1"></i>Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Teachers List -->
    <div class="row">
        @if (Model?.Any() == true)
        {
            @foreach (var teacher in Model)
            {
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-user-tie me-2"></i>@teacher.FirstName @teacher.LastName
                            </h6>
                        </div>
                        
                        <div class="card-body">
                            <div class="mb-2">
                                <small class="text-muted"><i class="fas fa-id-badge me-1"></i> Employee ID:</small>
                                <span class="badge bg-light text-dark">@teacher.EmployeeId</span>
                            </div>
                            
                            <div class="mb-2">
                                <small class="text-muted"><i class="fas fa-envelope me-1"></i></small>
                                <span>@teacher.Email</span>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(teacher.Department))
                            {
                                <div class="mb-2">
                                    <small class="text-muted"><i class="fas fa-building me-1"></i></small>
                                    <span>@teacher.Department</span>
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(teacher.Specialization))
                            {
                                <div class="mb-2">
                                    <small class="text-muted"><i class="fas fa-star me-1"></i></small>
                                    <span>@teacher.Specialization</span>
                                </div>
                            }
                            
                            <div class="mb-2">
                                <small class="text-muted"><i class="fas fa-calendar me-1"></i> Hired:</small>
                                <span>@teacher.HireDate.ToString("MMM yyyy")</span>
                            </div>
                            
                            <div class="mb-2">
                                <small class="text-muted"><i class="fas fa-clock me-1"></i> Experience:</small>
                                <span>@teacher.YearsOfExperience years</span>
                            </div>
                            
                            <div>
                                <small class="text-muted"><i class="fas fa-book me-1"></i> Courses:</small>
                                <span>@(teacher.Courses?.Count() ?? 0) assigned</span>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-light">
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-outline-primary btn-sm flex-fill">
                                    <i class="fas fa-eye me-1"></i>Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-outline-secondary btn-sm flex-fill">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-chalkboard-teacher fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No Teachers Found</h5>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                        {
                            <text>No teachers match your search criteria. Try adjusting your search terms.</text>
                        }
                        else
                        {
                            <text>Get started by adding your first teacher to the system.</text>
                        }
                    </p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add First Teacher
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Summary Stats -->
    @if (Model?.Any() == true)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="card-title">Summary Statistics</h6>
                        <div class="row text-center">
                            <div class="col-md-3">
                                <div class="d-flex flex-column">
                                    <span class="h5 text-primary mb-0">@Model.Count()</span>
                                    <small class="text-muted">Total Teachers</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex flex-column">
                                    <span class="h5 text-success mb-0">@Model.Where(t => t.Courses?.Any() == true).Count()</span>
                                    <small class="text-muted">Active Teachers</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex flex-column">
                                    <span class="h5 text-info mb-0">@Model.SelectMany(t => t.Courses ?? new List<SchoolManagementSystem.Models.Course>()).Count()</span>
                                    <small class="text-muted">Total Courses</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex flex-column">
                                    @{
                                        var avgExp = Model.Where(t => t.YearsOfExperience > 0).Any() 
                                            ? Model.Where(t => t.YearsOfExperience > 0).Average(t => t.YearsOfExperience) 
                                            : 0.0;
                                    }
                                    <span class="h5 text-warning mb-0">@string.Format("{0:F1}", avgExp)</span>
                                    <small class="text-muted">Avg Experience</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-dismiss alerts after 5 seconds
    setTimeout(function() {
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            if (alert.querySelector('.btn-close')) {
                alert.querySelector('.btn-close').click();
            }
        });
    }, 5000);
});
</script>