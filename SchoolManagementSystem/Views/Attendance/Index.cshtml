@model IEnumerable<SchoolManagementSystem.Models.Attendance>

@{
    ViewData["Title"] = "Attendance Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">Attendance</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-calendar-check"></i> Attendance Management
                    </h4>
                    <small>Track and manage student attendance</small>
                </div>
                <div class="card-body">
                    <!-- Filter Form -->
                    <form method="get" class="row g-3 mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Date</label>
                            <input type="date" class="form-control" name="date" value="@ViewBag.SelectedDate?.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Course</label>
                            @Html.DropDownList("courseId", ViewBag.Courses as SelectList, "All Courses", new { @class = "form-select" })
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Filter
                                </button>
                                <a class="btn btn-success" href="#" onclick="takeAttendanceForAllCourses()">
                                    <i class="fas fa-plus"></i> Take Attendance
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h5 class="text-success">@ViewBag.SelectedDate?.ToString("MMMM dd, yyyy")</h5>
                    <p class="mb-0">Selected Date</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h5 class="text-primary">@Model.Count()</h5>
                    <p class="mb-0">Total Records</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h5 class="text-success">@Model.Count(a => a.Status == "Present")</h5>
                    <p class="mb-0">Present</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h5 class="text-danger">@Model.Count(a => a.Status == "Absent")</h5>
                    <p class="mb-0">Absent</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Records -->
    @if (Model.Any())
    {
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-list"></i> Attendance Records for @ViewBag.SelectedDate?.ToString("MMMM dd, yyyy")
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Course</th>
                                <th>Student</th>
                                <th>Status</th>
                                <th>Check-in Time</th>
                                <th>Notes</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var attendance in Model.GroupBy(a => a.Course?.CourseName))
                            {
                                @foreach (var record in attendance.OrderBy(a => a.Student?.LastName))
                                {
                                    <tr>
                                        @if (record == attendance.First())
                                        {
                                            <td rowspan="@attendance.Count()">
                                                <strong>@record.Course?.CourseName</strong>
                                                <br>
                                                <small class="text-muted">@record.Course?.Subject?.Name</small>
                                                <br>
                                                <a asp-action="Take" asp-route-id="@record.CourseId" asp-route-date="@ViewBag.SelectedDate?.ToString("yyyy-MM-dd")" class="btn btn-sm btn-outline-primary mt-1">
                                                    <i class="fas fa-edit"></i> Take Attendance
                                                </a>
                                            </td>
                                        }
                                        <td>
                                            <a asp-action="Student" asp-route-id="@record.StudentId">
                                                @record.Student?.FullName
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge bg-@record.StatusColor">
                                                @record.Status
                                            </span>
                                        </td>
                                        <td>
                                            @if (record.CheckInTime.HasValue)
                                            {
                                                @record.CheckInTime.Value.ToString("HH:mm")
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(record.Notes))
                                            {
                                                @record.Notes
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Edit" asp-route-id="@record.Id" class="btn btn-outline-secondary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@record.Id" class="btn btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center">
                <div class="my-4">
                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No Attendance Records Found</h5>
                    <p class="text-muted">No attendance has been taken for @ViewBag.SelectedDate?.ToString("MMMM dd, yyyy") yet.</p>
                    
                    @if (ViewBag.Courses != null && ((SelectList)ViewBag.Courses).Any())
                    {
                        <div class="mt-3">
                            <p class="text-muted mb-2">Available courses for today:</p>
                            @foreach (var course in (SelectList)ViewBag.Courses)
                            {
                                <a asp-action="Take" asp-route-id="@course.Value" asp-route-date="@ViewBag.SelectedDate?.ToString("yyyy-MM-dd")" class="btn btn-outline-primary me-2 mb-2">
                                    <i class="fas fa-plus"></i> Take Attendance for @course.Text
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Quick Links -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-link"></i> Quick Links
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a asp-action="Report" class="btn btn-outline-info w-100">
                                <i class="fas fa-chart-bar"></i> Attendance Report
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-action="Index" asp-route-date="@DateTime.Today.ToString("yyyy-MM-dd")" class="btn btn-outline-success w-100">
                                <i class="fas fa-calendar-day"></i> Today's Attendance
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-action="Index" asp-route-date="@DateTime.Today.AddDays(-1).ToString("yyyy-MM-dd")" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-calendar-minus"></i> Yesterday's Attendance
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-controller="Students" asp-action="Index" class="btn btn-outline-primary w-100">
                                <i class="fas fa-users"></i> Manage Students
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function takeAttendanceForAllCourses() {
            const courses = @Html.Raw(Json.Serialize(ViewBag.Courses));
            const date = '@ViewBag.SelectedDate?.ToString("yyyy-MM-dd")';
            
            if (courses.length === 0) {
                alert('No active courses found for today.');
                return;
            }
            
            if (courses.length === 1) {
                window.location.href = '@Url.Action("Take")' + '/' + courses[0].value + '?date=' + date;
            } else {
                // Show course selection modal or redirect to course selection
                let courseList = 'Available courses:\n';
                courses.forEach(course => {
                    courseList += '- ' + course.text + '\n';
                });
                courseList += '\nPlease select a specific course from the filter above.';
                alert(courseList);
            }
        }

        // Auto-refresh page every 5 minutes to show updated attendance
        setTimeout(function() {
            location.reload();
        }, 300000); // 5 minutes
    </script>
}