@model IEnumerable<SchoolManagementSystem.Models.Attendance>

@{
    ViewData["Title"] = "Student Attendance Report";
    var student = ViewBag.Student as SchoolManagementSystem.Models.Student;
    var attendanceStats = ViewBag.AttendanceStats as dynamic;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Attendance</a></li>
                    <li class="breadcrumb-item active">Student Report</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-graduate"></i> Student Attendance Report
                    </h4>
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="mb-0">@student?.FullName</h5>
                            <small>Student ID: @student?.StudentId | Email: @student?.Email</small>
                        </div>
                        <div class="col-md-4 text-end">
                            <small>Generated: @DateTime.Now.ToString("MMM dd, yyyy")</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Statistics Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-success text-white text-center">
                                <div class="card-body">
                                    <h3>@attendanceStats?.TotalPresent</h3>
                                    <small>Total Present</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white text-center">
                                <div class="card-body">
                                    <h3>@attendanceStats?.TotalAbsent</h3>
                                    <small>Total Absent</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white text-center">
                                <div class="card-body">
                                    <h3>@attendanceStats?.TotalLate</h3>
                                    <small>Total Late</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-primary text-white text-center">
                                <div class="card-body">
                                    <h3>@(attendanceStats?.AttendanceRate)%</h3>
                                    <small>Attendance Rate</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Filter Form -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="fas fa-filter"></i> Filter Options</h6>
                        </div>
                        <div class="card-body">
                            <form method="get" asp-action="Student">
                                <input type="hidden" name="studentId" value="@student?.Id" />
                                <div class="row">
                                    <div class="col-md-3">
                                        <label class="form-label">From Date:</label>
                                        <input type="date" name="startDate" value="@ViewBag.StartDate" class="form-control" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">To Date:</label>
                                        <input type="date" name="endDate" value="@ViewBag.EndDate" class="form-control" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Course:</label>
                                        <select name="courseId" class="form-select">
                                            <option value="">All Courses</option>
                                            @if (ViewBag.Courses != null)
                                            {
                                                @foreach (var course in ViewBag.Courses as IEnumerable<SchoolManagementSystem.Models.Course>)
                                                {
                                                    <option value="@course.Id" selected="@(ViewBag.CourseId?.ToString() == course.Id.ToString())">
                                                        @course.CourseName (@course.Subject?.Name)
                                                    </option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">&nbsp;</label>
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-search"></i> Filter
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Attendance Records -->
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Course</th>
                                        <th>Subject</th>
                                        <th>Status</th>
                                        <th>Check-in Time</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var attendance in Model.OrderByDescending(a => a.AttendanceDate))
                                    {
                                        <tr class="@GetRowClass(attendance.Status)">
                                            <td>@attendance.AttendanceDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <strong>@attendance.Course?.CourseName</strong>
                                                @if (attendance.Course?.Teacher != null)
                                                {
                                                    <br><small class="text-muted">@attendance.Course.Teacher.FullName</small>
                                                }
                                            </td>
                                            <td>@attendance.Course?.Subject?.Name</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(attendance.Status)">
                                                    @attendance.Status
                                                </span>
                                            </td>
                                            <td>
                                                @if (attendance.CheckInTime.HasValue)
                                                {
                                                    @attendance.CheckInTime.Value.ToString("HH:mm")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(attendance.Notes))
                                                {
                                                    <small>@attendance.Notes</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Course-wise Summary -->
                        <div class="card mt-4">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-chart-bar"></i> Course-wise Attendance Summary</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @{
                                        var courseSummary = Model.GroupBy(a => new { a.CourseId, a.Course?.CourseName, a.Course?.Subject?.Name })
                                                               .Select(g => new {
                                                                   CourseName = g.Key.CourseName,
                                                                   SubjectName = g.Key.Name,
                                                                   Total = g.Count(),
                                                                   Present = g.Count(a => a.Status == "Present"),
                                                                   Absent = g.Count(a => a.Status == "Absent"),
                                                                   Late = g.Count(a => a.Status == "Late"),
                                                                   Excused = g.Count(a => a.Status == "Excused"),
                                                                   AttendanceRate = Math.Round(((double)g.Count(a => a.Status == "Present" || a.Status == "Late") / g.Count()) * 100, 1)
                                                               }).ToList();
                                    }
                                    @foreach (var summary in courseSummary)
                                    {
                                        <div class="col-md-6 col-lg-4 mb-3">
                                            <div class="card">
                                                <div class="card-body">
                                                    <h6 class="card-title">@summary.CourseName</h6>
                                                    <p class="card-text"><small class="text-muted">@summary.SubjectName</small></p>
                                                    <div class="row text-center small">
                                                        <div class="col-6">
                                                            <strong class="text-success">@summary.Present</strong><br>Present
                                                        </div>
                                                        <div class="col-6">
                                                            <strong class="text-danger">@summary.Absent</strong><br>Absent
                                                        </div>
                                                    </div>
                                                    <hr>
                                                    <div class="text-center">
                                                        <h5 class="@GetRateColorClass(summary.AttendanceRate)">@summary.AttendanceRate%</h5>
                                                        <small>Attendance Rate</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center my-4">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Attendance Records Found</h5>
                            <p class="text-muted">No attendance records found for the selected criteria.</p>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        <div>
                            <a class="btn btn-secondary" asp-action="Index">
                                <i class="fas fa-arrow-left"></i> Back to Attendance List
                            </a>
                        </div>
                        <div>
                            @if (Model.Any())
                            {
                                <button class="btn btn-outline-primary" onclick="window.print()">
                                    <i class="fas fa-print"></i> Print Report
                                </button>
                                <a class="btn btn-success" asp-controller="Students" asp-action="Details" asp-route-id="@student?.Id">
                                    <i class="fas fa-user"></i> View Student Profile
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetRowClass(string status)
    {
        return status switch
        {
            "Present" => "",
            "Late" => "table-warning",
            "Absent" => "table-danger",
            "Excused" => "table-info",
            _ => ""
        };
    }

    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Present" => "bg-success",
            "Late" => "bg-warning",
            "Absent" => "bg-danger",
            "Excused" => "bg-info",
            _ => "bg-secondary"
        };
    }

    string GetRateColorClass(double rate)
    {
        if (rate >= 90) return "text-success";
        if (rate >= 75) return "text-warning";
        return "text-danger";
    }
}

@section Styles {
    <style>
        @@media print {
            .btn, .card-header, nav, .no-print {
                display: none !important;
            }
            
            .card {
                border: none !important;
                box-shadow: none !important;
            }
            
            .card-body {
                padding: 0 !important;
            }
        }
    </style>
}