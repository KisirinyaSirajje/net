@model SchoolManagementSystem.Models.Student

@{
    ViewData["Title"] = "Grade Student - " + Model.FirstName + " " + Model.LastName;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Grading</a></li>
                    <li class="breadcrumb-item active">@Model.FirstName @Model.LastName</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <!-- Student Info Card -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Student Information</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="avatar-circle-lg mx-auto mb-2">
                            @Model.FirstName.First()@Model.LastName.First()
                        </div>
                        <h5 class="mb-0">@Model.FirstName @Model.LastName</h5>
                        <small class="text-muted">@Model.Email</small>
                    </div>
                    
                    <hr>
                    
                    <div class="row">
                        <div class="col-sm-6"><strong>Index Number:</strong></div>
                        <div class="col-sm-6">@(Model.IndexNumber ?? "N/A")</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6"><strong>Class:</strong></div>
                        <div class="col-sm-6">@(Model.CurrentClass ?? "N/A")</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6"><strong>Level:</strong></div>
                        <div class="col-sm-6">
                            <span class="badge @(Model.CurrentLevel == SchoolManagementSystem.Models.EducationLevel.OLevel ? "bg-primary" : "bg-success")">
                                @(Model.CurrentLevel == SchoolManagementSystem.Models.EducationLevel.OLevel ? "O-Level" : "A-Level")
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6"><strong>Stream:</strong></div>
                        <div class="col-sm-6">
                            @switch(Model.Stream)
                            {
                                case SchoolManagementSystem.Models.Stream.Science:
                                    <span class="badge bg-info">Science</span>
                                    break;
                                case SchoolManagementSystem.Models.Stream.Arts:
                                    <span class="badge bg-warning">Arts</span>
                                    break;
                                case SchoolManagementSystem.Models.Stream.Business:
                                    <span class="badge bg-success">Business</span>
                                    break;
                                case SchoolManagementSystem.Models.Stream.Technical:
                                    <span class="badge bg-dark">Technical</span>
                                    break;
                                default:
                                    <span class="badge bg-light text-dark">General</span>
                                    break;
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a class="btn btn-success btn-sm w-100" asp-action="ReportCard" asp-route-id="@Model.Id">
                        <i class="fas fa-file-alt"></i> View Report Card
                    </a>
                </div>
            </div>
        </div>

        <!-- Grading Section -->
        <div class="col-lg-8">
            <!-- Add New Grade Form -->
            <div class="card shadow mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-plus"></i> Add New Grade</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddGrade" method="post">
                        <input type="hidden" name="StudentId" value="@Model.Id" />
                        <input type="hidden" name="AcademicYear" value="@DateTime.Now.Year" />
                        <input type="hidden" name="WeightPercentage" value="100" />
                        
                        <div class="row">
                            <div class="col-md-4">
                                <label class="form-label">Subject</label>
                                <select name="SubjectId" class="form-select" required>
                                    <option value="">Select Subject</option>
                                    @foreach(var subject in ViewBag.Subjects)
                                    {
                                        <option value="@subject.Id">@subject.Name (@subject.Code)</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Term</label>
                                <select name="Term" class="form-select" required>
                                    <option value="0">Term 1</option>
                                    <option value="1">Term 2</option>
                                    <option value="2">Term 3</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Assessment Type</label>
                                <select name="AssessmentType" class="form-select" required>
                                    <option value="0">Continuous Assessment</option>
                                    <option value="1">Mid-term Exam</option>
                                    <option value="2">Final Exam</option>
                                    <option value="3">UCE Exam</option>
                                    <option value="4">UACE Exam</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Score (%)</label>
                                <input type="number" name="Score" class="form-control" min="0" max="100" step="0.1" required />
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <label class="form-label">Comments (Optional)</label>
                                <textarea name="Comments" class="form-control" rows="2" placeholder="Enter any additional comments..."></textarea>
                            </div>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Add Grade
                            </button>
                            <button type="reset" class="btn btn-secondary">
                                <i class="fas fa-undo"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Existing Grades -->
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Current Grades</h5>
                </div>
                <div class="card-body">
                    @if (Model.SubjectPerformances.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Subject</th>
                                        <th>Term</th>
                                        <th>Assessment</th>
                                        <th>Score</th>
                                        <th>Grade</th>
                                        <th>Grade Points</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var performance in Model.SubjectPerformances.OrderByDescending(p => p.SubmittedDate))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@performance.Subject.Name</strong>
                                                <br><small class="text-muted">@performance.Subject.Code</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    @switch(performance.Term)
                                                    {
                                                        case SchoolManagementSystem.Models.Term.Term1: @("Term 1") break;
                                                        case SchoolManagementSystem.Models.Term.Term2: @("Term 2") break;
                                                        case SchoolManagementSystem.Models.Term.Term3: @("Term 3") break;
                                                        default: @("N/A") break;
                                                    }
                                                </span>
                                            </td>
                                            <td>
                                                @switch(performance.AssessmentType)
                                                {
                                                    case SchoolManagementSystem.Models.AssessmentType.ContinuousAssessment: @("Continuous") break;
                                                    case SchoolManagementSystem.Models.AssessmentType.MidtermExam: @("Mid-term") break;
                                                    case SchoolManagementSystem.Models.AssessmentType.FinalExam: @("Final") break;
                                                    case SchoolManagementSystem.Models.AssessmentType.UCEExam: @("UCE") break;
                                                    case SchoolManagementSystem.Models.AssessmentType.UACEExam: @("UACE") break;
                                                    default: @("Other") break;
                                                }
                                            </td>
                                            <td>
                                                @if (performance.Score.HasValue)
                                                {
                                                    <span class="badge @(performance.Score >= 70 ? "bg-success" : performance.Score >= 60 ? "bg-warning" : "bg-danger")">
                                                        @performance.Score.Value.ToString("F1")%
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(performance.LetterGrade))
                                                {
                                                    <span class="badge @(performance.GradeScale?.IsPassingGrade == true ? "bg-success" : "bg-danger") fs-6">
                                                        @performance.LetterGrade
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (performance.GradePoint.HasValue)
                                                {
                                                    <span class="badge bg-primary">@performance.GradePoint.Value.ToString("F1")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @switch(performance.ResultStatus)
                                                {
                                                    case SchoolManagementSystem.Models.ResultStatus.Draft:
                                                        <span class="badge bg-secondary">Draft</span>
                                                        break;
                                                    case SchoolManagementSystem.Models.ResultStatus.Submitted:
                                                        <span class="badge bg-primary">Submitted</span>
                                                        break;
                                                    case SchoolManagementSystem.Models.ResultStatus.Approved:
                                                        <span class="badge bg-success">Approved</span>
                                                        break;
                                                    case SchoolManagementSystem.Models.ResultStatus.Published:
                                                        <span class="badge bg-info">Published</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-light text-dark">Unknown</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <a class="btn btn-sm btn-outline-primary" asp-action="EditGrade" asp-route-id="@performance.Id">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                            <h6 class="text-muted">No Grades Recorded</h6>
                            <p class="text-muted">Use the form above to add the first grade for this student.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle-lg {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: #007bff;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.5rem;
    }
</style>